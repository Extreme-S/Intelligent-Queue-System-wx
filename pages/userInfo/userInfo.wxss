.opendata {
  display: flex;
  width: 100%;
  height: 120px;
  justify-content: flex-start;
  align-items: flex-end;
  background-color: steelblue;
  padding: 50rpx;
}
.userAvatarUrl {
  /*用户头像样式*/
  width: 160rpx;
  height: 160rpx;
  display: block;
  overflow: hidden;
  border-radius: 50%;
  margin-right: 50rpx;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2); 
}
.userNickName{
/*用户昵称样式*/
  text-overflow:ellipsis;
  white-space:nowrap; 
  font-weight: bold;
  font-size: x-large;
  color: whitesmoke;
  display: block;
}


