/*首部背景图*/
.background{
  display:inherit;
  width: 100%;
}


/*信息框*/
.infomation{ 
  margin-top: -80rpx;
}

.info{ 
  width: 80%;
  margin: 0 auto; 
  padding: 20rpx;
  background: #ffffff;
  border-radius:15rpx;
  margin-bottom: 20rpx;
  opacity: 1;
}

.NameAndRate{
  display: flex;
  align-items: center;
}

.hospitalName {
  font-size: medium;
  font-weight: bold;
  border-right: 1rpx solid #d3d3d3;
  margin-right: 20rpx;

}


.rate_box{
  display: flex;
  align-items:baseline;
}


.rate_form{
  font-size: medium;
  font-weight: bolder;
  color: lightskyblue;
  
}
.rate_full{
  font-size: small;
  color: rgb(160, 159, 159);

}

.hospitalAddress{
  display: flex;
  font-size: small;
  font-weight: bold;
}

