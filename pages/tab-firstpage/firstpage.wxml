<!--pages/tab-firstpage/firstpage.wxml-->

<!-- ↓搜索框↓ -->

<van-search
  value="{{ value }}"
  placeholder="搜索医院或体检项目"
  shape="round"
  bind:search="onSearch"
  bind:cancel="onCancel"
/>

<van-cell-group>
  <van-cell title="定点合作医院" value="更多医院" />
</van-cell-group>

<!-- ↓定点合作医院↓ -->

<!-- ↓精选套餐↓ -->
<van-cell-group>
  <van-cell title="精选套餐" value="更多套餐" />
</van-cell-group>
<van-tabs active="{{ active }}" swipeable="true" custom-class="tabs-root">

  <van-tab title="标签 1">
    <view >
      <van-grid column-num="1" use-slot>
        <van-grid-item text="1"/>
        <van-grid-item text="1"/>
      </van-grid>
    </view>
  </van-tab>

  <van-tab title="标签 2">
    <view >
      <van-grid column-num="1" use-slot>
        <van-grid-item text="2"/>
        <van-grid-item text="2"/>
      </van-grid>
    </view>
  </van-tab>

  <van-tab title="标签 3">
    <view >
      <van-grid column-num="1" use-slot>
        <van-grid-item text="3"/>
        <van-grid-item text="3"/>
      </van-grid>
    </view>
  </van-tab>

</van-tabs>



<!-- ↓个性定制↓ -->
<van-cell-group>
  <van-cell title="个性定制" />
</van-cell-group>