<!--pages/tab-firstpage/firstpage.wxml-->

<!-- ↓搜索框↓ -->

<van-search
  value="{{ value }}"
  placeholder="搜索医院或体检项目"
  shape="round"
  bind:search="onSearch"
  bind:cancel="onCancel"
/>

<!-- ↓定点合作医院↓ -->
<van-panel active="{{ active }}" title="定点合作医院"  status="{{test_status}}"  custom-class="panel" header-class="panel-header" use-footer-slot="true">

  <van-card    title="{{test_name}}"  thumb="{{test_image}}" custom-class="card">
 <view slot="tags">
<van-row >
  <van-col span="3"><van-tag plain type="success"> 标签</van-tag></van-col>
  <van-col span="3"><van-tag plain type="success"> 标签</van-tag></van-col>
  <van-col span="3"><van-tag plain type="success"> 标签</van-tag></van-col>
  <van-col span="4" offset="11"><text >评分{{test_num1}}</text></van-col>
</van-row>


  </view>

<view slot="bottom">
<van-row type="flex" justify="space-between">
  <van-col span="6">{{test_place}}</van-col>
  <van-col span="6"></van-col>
  <van-col span="4" offset="14">月销{{test_num}}</van-col>
</van-row>

      
  </view>
  </van-card>

</van-panel>
<!-- ↓精选套餐↓ -->

<van-tabs active="{{ active }}" swipeable="true" custom-class="tabs-root">

  <van-tab title="标签 1">
    <view >
      <van-grid column-num="1" use-slot>
        <van-grid-item text="1"/>
        <van-grid-item text="1"/>
      </van-grid>
    </view>
  </van-tab>

  <van-tab title="标签 2">
    <view >
      <van-grid column-num="1" use-slot>
        <van-grid-item text="2"/>
        <van-grid-item text="2"/>
      </van-grid>
    </view>
  </van-tab>

  <van-tab title="标签 3">
    <view >
      <van-grid column-num="1" use-slot>
        <van-grid-item text="3"/>
        <van-grid-item text="3"/>
      </van-grid>
    </view>
  </van-tab>

</van-tabs>



